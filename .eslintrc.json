{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["node_modules/", ".next/", "out/"],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "react/no-unescaped-entities": "off",
    "jsx-a11y/alt-text": "off",
    "@next/next/no-img-element": "off",
    "no-useless-escape": "off"
  }
}